<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/control_bar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?toolBarColor"
    android:orientation="vertical"
    android:visibility="gone">

    <!-- Cancel Button -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/cancel_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circular_ripple"
            android:gravity="center"
            android:src="@drawable/twotone_cancel_black_24"
            app:tint="?toolBarTitleColor" />

        <!-- Title -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/control_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:singleLine="true"
                android:text="@string/choose_text"
                android:textColor="?toolBarTitleColor"
                android:textSize="20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Select All Button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/select_all_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circular_ripple"
            android:gravity="center"
            android:src="@drawable/twotone_select_all_black_24"
            app:tint="?toolBarTitleColor" />

        <!-- Cut Button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/cut_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circular_ripple"
            android:gravity="center"
            android:src="@drawable/twotone_content_cut_black_24"
            app:tint="?toolBarTitleColor" />

        <!-- Copy Button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/copy_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circular_ripple"
            android:gravity="center"
            android:src="@drawable/twotone_content_copy_black_24"
            app:tint="?toolBarTitleColor" />

        <!-- Paste Button -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/paste_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circular_ripple"
            android:gravity="center"
            android:src="@drawable/twotone_content_paste_black_24"
            app:tint="?toolBarTitleColor" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
