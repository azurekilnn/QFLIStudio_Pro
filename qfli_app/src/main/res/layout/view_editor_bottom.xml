<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|end"
    android:id="@+id/bottom_layout_root"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/fast_operation_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:visibility="gone">

            <!--finsert_code_button-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.8"
                android:background="?toolBarColor"
                android:elevation="2dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/finsert_code_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/twotone_add_black_24"
                        app:tint="?toolBarTitleColor" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <!--finsert_code_button-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.8"
                android:background="?toolBarColor"
                android:elevation="2dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fsearch_code_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/twotone_find_in_page_black_24"
                        app:tint="?toolBarTitleColor" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <!--fcodeOperationButton-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:elevation="2dp"
                app:tint="?toolBarTitleColor">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fcode_operation_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/twotone_edit_note_black_24"
                        app:tint="?toolBarTitleColor" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <!--fformatButton-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:alpha="0.8"
                android:background="?toolBarColor"
                android:elevation="2dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fformat_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/twotone_notes_black_24"
                        app:tint="?toolBarTitleColor" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <!--fpasteButton-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:alpha="0.8"
                android:background="?toolBarColor"
                android:elevation="2dp"
                app:cardCornerRadius="8dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fpaste_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/twotone_content_paste_black_24"
                        app:tint="?toolBarTitleColor" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

            <!--fredoButton-->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_margin="8dp"
                android:alpha="0.8"
                android:background="?toolBarColor"
                android:elevation="2dp"
                app:cardCornerRadius="8dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/fredo_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/twotone_redo_black_24"
                        app:tint="?toolBarTitleColor" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.google.android.material.card.MaterialCardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/symbol_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="?toolBarColor"
            android:elevation="1dp"
            app:cardCornerRadius="16dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/symbol_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:scrollbars="none">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/editor_symbols_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_marginStart="0dp"
            android:alpha="0.8"
            android:background="?toolBarColor"
            android:elevation="2dp"
            app:cardCornerRadius="16dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/fast_button_close_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fast_button_close_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:rotation="0"
                    android:src="@drawable/twotone_chevron_left_black_24"
                    app:tint="?toolBarTitleColor" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/search_bar_include"
        layout="@layout/layout_editor_search_bar" />

</androidx.appcompat.widget.LinearLayoutCompat>

