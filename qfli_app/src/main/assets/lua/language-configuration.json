{
    "comments": {
      "lineComment": "--",
      "blockComment": [
        "--[[",
        "]]"
      ]
    },
    "brackets": [
      [
        "{",
        "}"
      ],
      [
        "[",
        "]"
      ],
      [
        "(",
        ")"
      ]
    ],
    "autoClosingPairs": [
      [
        "{",
        "}"
      ],
      [
        "[",
        "]"
      ],
      [
        "(",
        ")"
      ],
      {
        "open": "\"",
        "close": "\"",
        "notIn": [
          "string"
        ]
      },
      {
        "open": "'",
        "close": "'",
        "notIn": [
          "string"
        ]
      }
    ],
    "surroundingPairs": [
      [
        "{",
        "}"
      ],
      [
        "[",
        "]"
      ],
      [
        "(",
        ")"
      ],
      [
        "\"",
        "\""
      ],
      [
        "'",
        "'"
      ]
    ],
    "folding": {
      "markers": {
        "start": "^\\s*\\b(function|local\\s+function|if|for)\\b|{[ \\t]*$|\\[\\[",
        "end": "\\bend\\b|^\\s*}|\\]\\]"
      }
    },
    "indentationRules": {
      "increaseIndentPattern": "^((?!(\\-\\-)).)*((\\b(else|function|then|do|repeat)\\b((?!\\b(end|until)\\b).)*)|(\\{\\s*))$",
      "decreaseIndentPattern": "^\\s*((\\b(elseif|else|end|until)\\b)|(\\})|(\\)))"
    }
  }